{
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "dist/public/assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "dist/index.mjs",
      "use": "@vercel/node",
      "config": {
        "supportsResponseStreaming": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "dist/public/assets/$1"
    },
    {
      "source": "/(.*)",
      "destination": "dist/index.mjs"
    }
  ]
}
